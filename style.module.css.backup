/* === Base Layout === */
body {
  background-color: blue;
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
}

/* === Header === */
h1 {
  background-color: green;
  color: white;
  padding: 10px;
  margin: 0;
}

/* === Links === */
a {
  text-decoration: none;
  color: black;
}

a:hover {
  text-decoration: underline;
}

/* === Ordered List === */
ol {
  padding: 20px;
}

li {
  background-color: orange;
  font-size: 20px;
  margin-bottom: 5px;
  padding: 5px;
  transition: background-color 0.3s ease;
}

li:hover {
  background-color: grey;
}

/* === Highlighted Items === */
.highlight {
  background-color: yellow;
}

/* === Footer === */
footer {
  background-color: #222;
  color: #ccc;
  text-align: center;
  padding: 15px;
  font-size: 14px;
}

footer a {
  color: #ccc;
  text-decoration: underline;
}
